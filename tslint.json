{
	"extends": "tslint:recommended",
	"rules": {
		"max-line-length": {
			"options": [120]
		},
		"new-parens": true,
		"no-arg": true,
		"no-bitwise": true,
		"no-conditional-assignment": true,
		"no-consecutive-blank-lines": false,
		"no-console": {
			"severity": "warning",
			"options": ["debug", "info", "log", "time", "timeEnd", "trace"]
		},
		"variable-name": {
			"options": [
				"ban-keywords",
				"check-format",
				"allow-leading-underscore",
				"allow-pascal-case",
				"allow-snake-case"
			]
		}
	},
	"jsRules": {
		"max-line-length": {
			"options": [120]
		}
	}
}
